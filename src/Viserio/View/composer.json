{
    "name"       : "viserio/view",
    "type"       : "library",
    "description": "The Viserio View package.",
    "keywords"   : ["narrowspark", "viserio", "view", "plates", "php"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/Narrowspark/api",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                : ">=5.6",
        "viserio/contracts"                  : "self.version",
        "viserio/events"                     : "self.version",
        "viserio/filesystem"                 : "self.version",
        "viserio/container"                  : "self.version",
        "container-interop/container-interop": "~1.0"
    },
    "require-dev": {
        "dwoo/dwoo"                          : "~2.0b1",
        "league/plates"                      : "~3.1",
        "mthaml/mthaml"                      : "~1.6.0",
        "twig/twig"                          : "~1.16.3",
        "pyrocms/lex"                        : "~2.2",
        "fabpot/php-cs-fixer"                : "~1.10.1",
        "phpunit/phpunit"                    : "~5.0.6"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\View\\"                : ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\View\\Tests\\"         : "tests/"
        }
    },
    "suggest": {
        "league/plates"                      : "Narrowspark has support for Plates v3.1.0",
        "dwoo/dwoo"                          : "Narrowspark has support for dwoo v2.0b1",
        "mthaml/mthaml"                      : "Narrowspark has support for mthaml v1.6.0",
        "twig/twig"                          : "Narrowspark has support for twig v1.16.3",
        "pyrocms/lex"                        : "Narrowspark has support for lex v2.2.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master"                     : "0.10.0-dev"
        }
    },
    "minimum-stability"                      : "dev",
    "prefer-stable"                          : true
}
